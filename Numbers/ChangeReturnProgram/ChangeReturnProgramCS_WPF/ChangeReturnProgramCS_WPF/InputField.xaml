<UserControl x:Class="ChangeReturnProgramCS_WPF.InputField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChangeReturnProgramCS_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="InputFieldControl" FontSize="{Binding ElementName=InputFieldControl, Path=ControlFontSize}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="1" Text="0" TextWrapping="Wrap" Name="Input"/>
        <TextBlock TextWrapping="Wrap" Text="{Binding ElementName=InputFieldControl, Path=Head}"/>
    </Grid>
</UserControl>
